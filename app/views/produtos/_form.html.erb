<%= form_with(model: produto, local: true) do |form| %>
  <% if produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(produto.errors.count, "erro") %> não permitem a criação do produto:</h2>

      <ul>
      <% produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-xs-4">
        <div class="form-group">
          <%= form.label :title, "Nome" %>
          <%= form.text_field :title, placeholder: "Nome", class: "form-control" %>
        </div>
      </div>

      <div class="col-xs-4">
        <div class="form-group">
          <%= form.label :brand, "Marca" %>
          <%= form.text_field :brand, placeholder: "Marca", class: "form-control" %>
        </div>
      </div>

      <div class="col-xs-4">
        <div class="form-group">
          <%= form.label :category, "Categoria" %>
          <%= form.text_field :category, placeholder: "Categoria", class: "form-control" %>
        </div>
      </div>

      <div class="col-xs-4">
        <div class="form-group">
          <%= form.label :price, "Preço" %>
          <%= form.text_field :price, placeholder: "Preço", class: "form-control" %>
        </div>
      </div>

      <div class="col-xs-4">
        <div class="form-group">
          <%= form.label :amount, "Quantidade" %>
          <%= form.text_field :amount, placeholder: "Quantidade", class: "form-control" %>
        </div>
      </div>

      <div class="col-xs-4">
        <center>
          <div class="actions" style="margin-top:25px;">
            <%= form.submit "Criar Produto", :class => 'btn btn-primary' %>
          </div>
        </center>
      </div>
    </div>
  </div>
<% end %>
